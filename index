                explanation: "True. APFS can be formatted as either case-sensitive or case-insensitive, and forensic investigators must account for this when searching for files."
            },
            {
                question: "In ext4, what is the purpose of the 'lost+found' directory?",
                answers: ["Store deleted files", "Temporary file storage", "Recovered file fragments after fsck", "System backup files"],
                correct: 2,
                explanation: "The lost+found directory contains file fragments and orphaned inodes recovered by the fsck (file system check) utility after system crashes or corruption."
            },
            {
                question: "Which macOS extended attribute (xattr) might contain information about where a file was downloaded from?",
                answers: ["com.apple.FinderInfo", "com.apple.quarantine", "com.apple.metadata", "com.apple.TextEncoding"],
                correct: 1,
                explanation: "The com.apple.quarantine extended attribute stores information about downloaded files including the source URL, download time, and application that downloaded it."
            }
        ];

        let currentQuestion = 0;
        let score = 0;
        let startTime;
        let selectedAnswer = null;
        let answered = false;
        let correctCount = 0;

        function startQuiz() {
            currentQuestion = 0;
            score = 0;
            correctCount = 0;
            startTime = Date.now();
            document.querySelector('.start-screen').classList.remove('active');
            document.querySelector('.quiz-screen').classList.add('active');
            loadQuestion();
        }

        function loadQuestion() {
            answered = false;
            selectedAnswer = null;
            const q = questions[currentQuestion];
            
            document.getElementById('question-number').textContent = `Question ${currentQuestion + 1} of ${questions.length}`;
            document.getElementById('question-text').textContent = q.question;
            document.getElementById('progress').style.width = `${((currentQuestion + 1) / questions.length) * 100}%`;
            
            const answersDiv = document.getElementById('answers');
            answersDiv.innerHTML = '';
            
            q.answers.forEach((answer, index) => {
                const answerDiv = document.createElement('div');
                answerDiv.className = 'answer';
                answerDiv.textContent = answer;
                answerDiv.onclick = () => selectAnswer(index);
                answersDiv.appendChild(answerDiv);
            });
            
            document.getElementById('explanation').classList.remove('show');
            document.getElementById('next-button').classList.remove('show');
        }

        function selectAnswer(index) {
            if (answered) return;
            
            answered = true;
            selectedAnswer = index;
            const q = questions[currentQuestion];
            const answers = document.querySelectorAll('.answer');
            
            answers[index].classList.add('selected');
            
            setTimeout(() => {
                if (index === q.correct) {
                    answers[index].classList.add('correct');
                    score += 5;
                    correctCount++;
                    document.getElementById('current-score').textContent = score;
                } else {
                    answers[index].classList.add('incorrect');
                    answers[q.correct].classList.add('correct');
                }
                
                const explanation = document.getElementById('explanation');
                explanation.innerHTML = `<strong>Explanation:</strong> ${q.explanation}`;
                explanation.classList.add('show');
                
                document.getElementById('next-button').classList.add('show');
            }, 500);
        }

        function nextQuestion() {
            currentQuestion++;
            if (currentQuestion < questions.length) {
                loadQuestion();
            } else {
                showResults();
            }
        }

        function showResults() {
            const endTime = Date.now();
            const timeTaken = Math.floor((endTime - startTime) / 1000);
            const minutes = Math.floor(timeTaken / 60);
            const seconds = timeTaken % 60;
            const accuracy = Math.round((correctCount / questions.length) * 100);
            
            document.querySelector('.quiz-screen').classList.remove('active');
            document.querySelector('.result-screen').classList.add('active');
            
            document.getElementById('final-score').textContent = score;
            document.getElementById('total-questions').textContent = questions.length;
            document.getElementById('correct-answers').textContent = correctCount;
            document.getElementById('accuracy').textContent = `${accuracy}%`;
            document.getElementById('time-taken').textContent = `${minutes}m ${seconds}s`;
            
            let grade = '';
            if (accuracy >= 90) {
                grade = 'üèÜ Expert Investigator!';
            } else if (accuracy >= 80) {
                grade = '‚≠ê Senior Analyst';
            } else if (accuracy >= 70) {
                grade = '‚ú® Competent Examiner';
            } else if (accuracy >= 60) {
                grade = 'üìö Keep Studying';
            } else {
                grade = 'üí™ More Practice Needed';
            }
            
            document.getElementById('grade').textContent = grade;
        }

        function restartQuiz() {
            document.querySelector('.result-screen').classList.remove('active');
            document.querySelector('.start-screen').classList.add('active');
        }
    </script>
</body>
